<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:gravity="start"
        android:padding="20dp"
        android:textColor="#000000"
        android:fontFamily="@font/cornerita_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnC" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="C" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnSign" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="+/-" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnPercent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="%" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnDivide" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="/" android:textColor="#FFFFFF" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn7" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="7" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn8" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="8" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn9" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="9" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnMultiply" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="*" android:textColor="#FFFFFF" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn4" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="4" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn5" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="5" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn6" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="6" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnMinus" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="-" android:textColor="#FFFFFF" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="1" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn2" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="2" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn3" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="3" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnPlus" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="+" android:textColor="#FFFFFF" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btn0" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="0" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnDot" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="." android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnEquals" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="=" android:textColor="#FFFFFF" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:background="#D3D3D3" android:layout_margin="5dp">
                <Button android:id="@+id/btnTheme" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:background="@drawable/button_background" android:text="Th" android:textColor="#000000" android:fontFamily="@font/cornerita_regular" android:textSize="24sp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
